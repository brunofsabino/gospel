            },
            body: new URLSearchParams({
                email, name, password
            })
        })
        const json = await newUser.json()
        if(json.id) {
            createSucess(json)
            location.reload() 
            // localStorage.setItem("token", json.token);
            localStorage.setItem('id', json.id)
            // areaPerfilUser.setAttribute('id', json.id)
        }
    } 
}

